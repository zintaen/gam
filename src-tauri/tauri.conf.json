{
    "productName": "GAM",
    "version": "1.0.0",
    "identifier": "com.github.zintaen.gam",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173",
        "beforeDevCommand": "pnpm vite",
        "beforeBuildCommand": "pnpm vite build"
    },
    "app": {
        "windows": [
            {
                "title": "GAM â€” Git Alias Manager",
                "width": 1100,
                "height": 750,
                "minWidth": 800,
                "minHeight": 550,
                "visible": true,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src ipc: http://ipc.localhost"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "macOS": {
            "minimumSystemVersion": "10.13"
        }
    },
    "plugins": {}
}
